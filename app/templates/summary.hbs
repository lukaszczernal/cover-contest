<div class="summary">
    <h1 class="summary-title">Summary</h1>

    {{!-- TODO remove duplicate code  --}}
    {{#if likeList}}
        <span class="summary-subtitle">You liked {{likeList.length}} covers</span>
        <ul class="summary-list">
            {{#each likeList}}
                {{!-- TODO convert to helper  --}}
                <li class="summary-item">
                    <img class="summary-itemImg" src="{{src}}"/>
                    <div class="summary-itemRating">
                        <div class="summary-itemRatingProgressWrapper m-liked">
                            <div class="summary-itemRatingProgress"></div>
                        </div>
                        <span class="summary-itemRatingText">50% agree</span>
                    </div>
                </li>
            {{/each}}
        </ul>
    {{/if}}

    {{#if dislikeList}}
        <span class="summary-subtitle">You disliked {{dislikeList.length}} covers</span>
        <ul class="summary-list">
            {{#each dislikeList}}
                <li class="summary-item">
                    <img class="summary-itemImg" src="{{src}}"/>
                    <div class="summary-itemRating m-disliked">
                        <div class="summary-itemRatingProgressWrapper m-disliked">
                            <div class="summary-itemRatingProgress"></div>
                        </div>
                        <span class="summary-itemRatingText">50% agree</span>
                    </div>
                </li>
            {{/each}}
        </ul>
    {{/if}}

    <div class="summary-controls">
        <a class="summary-controlsBtn goToDeck btn">Again</a>
        <a class="summary-controlsBtn goToHome btn">Home</a>
    </div>

</div>
