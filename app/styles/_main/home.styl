.home
  padding-top 3rem
  text-align center

.home-title
  margin 0
  font-family AvenirNext-Heavy
  font-size (70/16)rem
  text-transform uppercase
  line-height @font-size
  background -webkit-linear-gradient(#e4ffff, #74c6be)
  -webkit-background-clip text
  -webkit-text-fill-color transparent

  &.m-subtitle
    -webkit-text-stroke-width 0px
    -webkit-text-fill-color initial
    color #74c6be
    font-size (28/16)rem
    line-height @font-size

.home-instructions
  display block
  font-size (28/16)rem
  line-height @font-size + .3

  &:first-of-type
    padding-top 4rem

.home-swipe
  margin 0 auto 1rem auto
  max-width 420px
  width 100%

.home-swipeArrow
  height 5rem

.home-swipeLabel
  display inline-block
  font-family AvenirNext-Bold
  font-size (24/16)rem
  width 49%

  &.m-negative
    color #dc9090


  &.m-positive
    color #90dc95
