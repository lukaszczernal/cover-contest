// .card

.card-img
    position absolute
    top 15%
    bottom 21%
    left 0
    right 0
    transform translate(0, 0)

    &.m-rated
        opacity 0

    &.tween
        transition all 0.3s ease-out

    .m-front-3 &
        opacity 0
        transform translate(0, -26%) scale(0.7)

    .m-front-2 &
        opacity 1
        transform translate(0, -17%)  scale(0.8)
        transition-delay 0.2s

    .m-front-1 &
        opacity 1
        transform translate(0, -9%) scale(0.9)
        transition-delay 0.1s

    .m-front-0 &
        opacity 1
        transform translate(0, 0) scale(1)
        transition-delay 0s

.card-imgWrapper
    position absolute
    top 0px
    bottom 0px
    left 50%
    transform translate(-50%)

.card-imgTag
    height 100%

.card-imgOverlay
    position absolute
    top 0
    height 100%
    width 100%
    background-color #012c30

    .m-front-3 &
        opacity 1

    .m-front-2 &
        opacity 0.8
        width 100.2% // Overlay was not covering a whole third card

    .m-front-1 &
        opacity 0.5

    .m-front-0 &
        opacity 0

.card-title
    opacity 0
    text-align center
    position absolute
    padding-top 1em
    top 79%
    bottom 0%
    left 50%
    transform translate(-50%, -30%) scale(0.5)
    transition all 0.3s ease-out
    font-size 1rem
    user-select none

    .m-front-0 &
        opacity .6
        transform translate(-50%, 0) scale(1)

    &.m-rated
        opacity 0
        transform translate(-50%, 30%) scale(1.4)
