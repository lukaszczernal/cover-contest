.instructions
  position absolute
  top 0px
  bottom 0px
  left 0px
  right 0px
  background-color rgba(0,0,0,0.5)
  pointer-events none

  &.m-center
    display flex
    justify-content center
    flex-direction column

.instructions-swipeArrow
  display flex
  align-items flex-end
  flex 4

.instructions-swipeArrowImgParent
  flex 1
  height 0
  padding-bottom 25%
  position relative

.instructions-swipeArrowImgChild
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  overflow hidden

.instructions-swipeArrowImg
  margin-top 20%
  transform translateY(-50%)

.instructions-swipeLabels
  display flex
  flex 5

.instructions-swipeLabel
  flex 1
  font-family AvenirNext-Bold
  font-size (24/16)rem

  &.m-negative
    color #dc9090
    padding-left 6%

  &.m-positive
    color #90dc95
    text-align right
    padding-right 6%
